# Server Configuration
PORT=3000  # Default port for the application

# Admin API Security (REQUIRED for production)
# Generate a secure random key for admin endpoints (/api/admin/*)
# Without this key, admin endpoints will return 503 Service Unavailable
ADMIN_API_KEY=your_secure_api_key_here

# Broker Configuration
# Options: "paper" (default), "zerodha", or "angelone"
BROKER_PROVIDER=paper

# Zerodha API Configuration (required if BROKER_PROVIDER=zerodha)
# Get your API key from https://kite.trade/
# NOTE: Zerodha charges â‚¹2000/month for market data APIs
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here

# Zerodha Access Token (optional - will be auto-saved after OAuth login)
# ZERODHA_ACCESS_TOKEN=your_access_token_here

# Zerodha Trading Configuration
ZERODHA_DEFAULT_EXCHANGE=NSE
ZERODHA_PRODUCT=CNC

# Angel One SmartAPI Configuration (required if BROKER_PROVIDER=angelone)
# Get your API key from https://smartapi.angelbroking.com/
# Angel One provides FREE market data and historical data APIs!
ANGEL_ONE_API_KEY=your_api_key_here
ANGEL_ONE_CLIENT_ID=your_client_id_here
ANGEL_ONE_PASSWORD=your_password_here

# Angel One TOTP Secret (optional - for automatic 2FA)
# If not provided, you'll need to enter TOTP manually during login
# ANGEL_ONE_TOTP_SECRET=your_totp_secret_here

# Angel One Trading Configuration
ANGEL_ONE_DEFAULT_EXCHANGE=NSE
ANGEL_ONE_PRODUCT_TYPE=DELIVERY

# Portfolio Storage Configuration
# Backend: "lmdb" (default, recommended) or "file"
PORTFOLIO_BACKEND=lmdb

# Custom storage path (optional)
# PORTFOLIO_STORE=/path/to/storage

# Database Backup Configuration (LMDB only)
BACKUP_INTERVAL_HOURS=24

# Trading Safety Configuration
DRY_RUN=false
MAX_POSITION_SIZE=100000

# Notifications (optional)
ENABLE_NOTIFICATIONS=false
